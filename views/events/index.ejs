<div class="wrapper">
  <h1 class="headline">Upcoming events: <%= currentEvents.length %></h1>
  <% for(let event of currentEvents){ %>
  <a href="events/<%=event.id%>">
    <div class="card">
      <p>
        <%=new Date(event.startDate).toLocaleDateString()%> //
        <%=event.eventGroupId%>
      </p>
      <div class="card-title">
        <h4 class=""><%=event.name%></h4>
      </div>
      <div class="card-body">
        <h2><%=event.title%></h2>
        <a href="/events/<%=event.id%>"><p class="edit-icon">edit</p></a>
      </div>
    </div>
  </a>
  <%}%>
</div>
