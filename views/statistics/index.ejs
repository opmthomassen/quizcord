<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  // Hent data fra EJS-variabler
  let labels = "<%= labels %>";
  let scores = "<%= scores  %>";
  let colors = "<%= colors  %>";

  labels = labels.split(",");
  scores = scores.split(",");
  colors = colors.split(",");

  // Konfigurer Chart.js
  const ctx = document.getElementById("myChart").getContext("2d");
  new Chart(ctx, {
    type: "bar",
    data: {
      labels: labels,
      datasets: [
        {
          label: "Team score",
          data: scores,
          backgroundColor: colors,
          borderColor: colors,
          borderWidth: 1,
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  });

  const colorChart = document.getElementById("colorChart").getContext("2d");
  new Chart(colorChart, {
    type: "bar",
    data: {
      labels: labels,
      datasets: [
        {
          label: "Team score",
          data: scores,
          backgroundColor: [
            "rgba(255, 99, 132, 0.2)",
            "rgba(255, 159, 64, 0.2)",
            "rgba(255, 205, 86, 0.2)",
            "rgba(75, 192, 192, 0.2)",
            "rgba(54, 162, 235, 0.2)",
            "rgba(105, 116, 119, 0.2)",
            "rgba(201, 203, 207, 0.2)",
          ],
          borderColor: [
            "rgb(255, 99, 132)",
            "rgb(255, 159, 64)",
            "rgb(255, 205, 86)",
            "rgb(75, 192, 192)",
            "rgb(54, 162, 235)",
            "rgb(105, 116, 119)",
            "rgb(201, 203, 207)",
          ],
          borderWidth: 1,
        },
      ],
    },
