<div>
  <canvas id="myChart" class="hide"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  // Hent data fra EJS-variabler
  let labels = "<%= labels %>";
  let scores = "<%= scores  %>";
  let colors = "<%= colors  %>";

  labels = labels.split(",");
  scores = scores.split(",");
  colors = colors.split(",");

  // Konfigurer Chart.js
  const ctx = document.getElementById("myChart").getContext("2d");
  new Chart(ctx, {
    type: "bar",
    data: {
      labels: labels,
      datasets: [
        {
          label: "Team score",
          data: scores,
          backgroundColor: colors,
          borderColor: colors,
          borderWidth: 1,
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  });
</script>

