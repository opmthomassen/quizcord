<%layout('layouts/boilerplate')%>

<h1>Edit <%=user.name%></h1>

<form action="/users/<%=user.id%>?_method=PUT" method="POST">
  <label for="name">Name: </label>
  <input type="text" id="name" name="user[name]" value="<%= user.name  %>" />
  <label for="age">Age: </label>
  <input type="text" id="age" name="user[age]" value="<%= user.age  %>" />
  <label for="gender">Gender: </label>
  <input
    type="text"
    id="gender"
    name="user[gender]"
    value="<%= user.gender  %>"
  />

  <button class="btn btn-primary">Save changes</button>
</form>

<form action="/users/<%=user.id%>?_method=DELETE" method="POST">
  <button class="btn btn-warning">Delete user</button>
</form>

<a href="/users">Back</a>
