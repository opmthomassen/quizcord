<% layout('layouts/boilerplate') %>

<div class="row mb-5">
  <div class="col-6 offset-3">
    <div class="card">
      <img
        src="<%=campground.image%>"
        class="card-img-top"
        alt="Picture of <%=campground.title%>"
      />
      <div class="card-body">
        <h4 class="card-title"><%=campground.title%></h4>
        <h6 class="card-text text-muted"><%=campground.location%></h6>
        <p class="card-text">$ <%=campground.price%> / per night</p>
        <p class="card-text"><%=campground.description%></p>
      </div>
      <div class="card-body">
        <a href="/campgrounds/<%=campground.id%>/edit" class="btn btn-primary"
          >Edit</a
        >
        <form
          action="../campgrounds/<%=campground.id%>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <h4 class="mt-3">Leave a review</h4>
    <form action="" method="" class="mb-3">
      <div class="mb-3">
        <label for="rating" class="form label">Rating</label>
        <input
          type="range"
          class="form-range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
        />
      </div>
      <class class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body"></textarea>
        <button class="btn btn-primary mt-3">Submit review</button>
      </class>
    </form>

    <a href="/campgrounds" class="card-link btn btn-info mt-5">Back</a>
  </div>
</div>
