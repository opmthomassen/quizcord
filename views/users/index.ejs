<%layout('layouts/boilerplate')%>

<h2>All users</h2>
<a href="/">‚Üê Back home</a>
<section class="top">
  <h1>Strengthen the horde!</h1>
  <form action="/users" method="POST">
    <input
      type="text"
      placeholder="Name"
      autofocus
      required
      name="user[name]"
    />
    <button class="btn btn-primary">Add user</button>
  </form>
</section>

<h3>Active roster: <%= activeUsers.length %></h3>
<div class="wrapper">
  <% for(let user of activeUsers){ %>

  <div class="card">
    <a
      class="deactivate-user"
      title="Deactivate user"
      href="/changeActiveStatus/<%=user.id%>?active=false"
    >
      <div class="card-title">
        <p class="user"><%=user.name%></p>
      </div></a
    >
    <div class="card-body">
      <ul>
        <li>Age: <%=user.age%></li>
        <li>Gender: <%=user.gender%></li>
      </ul>
      <a href="/users/<%=user.id%>"><p class="edit-icon">edit</p></a>
    </div>
  </div>
  <%}%>
</div>
<h3>Legacy roster: <%= inactiveUsers.length %></h3>
<div class="wrapper">
  <% for(let user of inactiveUsers){ %>

  <div class="card">
    <a
      class="activate-user"
      title="Activate user"
      href="/changeActiveStatus/<%=user.id%>?active=true"
    >
      <div class="card-title">
        <p class="user"><%=user.name%></p>
      </div></a
    >
    <div class="card"></div>
    <div class="card-body">
      <ul>
        <li>Age: <%=user.age%></li>
        <li>Gender: <%=user.gender%></li>
      </ul>
      <a href="/users/<%=user.id%>"><p class="edit-icon">edit</p></a>
    </div>
  </div>
  <%}%>
</div>
