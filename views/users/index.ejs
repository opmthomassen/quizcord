<%layout('layouts/boilerplate')%>

<h1>All users</h1>

<form action="/users" method="POST">
  <label for="name">Username</label>
  <input type="text" placeholder="Username" autofocus name="user[name]" />
  <button>Add user</button>
</form>

<ul>
  <% for(let user of users){ %>
  <a href="/users/<%=user.id%>"><p class="user"><%=user.name%></p></a>
  <ul>
    <li><%=user.age%></li>
    <li><%=user.gender%></li>
  </ul>
  <%}%>
</ul>

<a href="/">Back home</a>
