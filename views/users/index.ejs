<%layout('layouts/boilerplate')%>

<h2>All users</h2>
<a href="/">← Back home</a>
<div class="spacer"></div>
<section class="top">
  <h1>Strengthen the horde!</h1>
  <form action="/users" method="POST">
    <input
      type="text"
      placeholder="Name"
      autofocus
      required
      name="user[name]"
    />
    <button class="btn btn-primary">Add user</button>
  </form>
</section>

<div class="wrapper">
  <% for(let user of users){ %>

  <div class="card">
    <div class="card-title">
      <a href="/users/<%=user.id%>"><p class="user"><%=user.name%></p></a>
    </div>
    <div class="card-body">
      <ul>
        <li>Age: <%=user.age%></li>
        <li>Gender: <%=user.gender%></li>
      </ul>
    </div>
  </div>
  <%}%>
</div>
